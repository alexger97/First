<Window x:Class="First.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:First"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:local1="clr-namespace:First.ViewModel"
        mc:Ignorable="d"
        Title="Window1" Height="500" Width="1150">
    <Window.DataContext>
        <local1:MainWindowViewModel></local1:MainWindowViewModel>
    </Window.DataContext>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="1000"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" Margin="0,0,0,51" >

            <Button Background="LawnGreen"  Content="Добавить задачу" Command="{Binding CliclOne}" />
            <Button  Background="GreenYellow" Content="Просмотра списка задач" Command="{Binding CliclTwo}" />
            <Button Background="LightGreen" Content="Возможнгсть редакции выбранной задачи"/>
           
     
        </StackPanel>
        <Frame Grid.Column="1" Content="{Binding CurrentPage}"  NavigationUIVisibility="Hidden" Opacity="{Binding FrameOpacity}" />

    </Grid>
</Window>
