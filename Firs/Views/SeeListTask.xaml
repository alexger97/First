<Window x:Class="First.SeeListTask"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:First.ViewModel;assembly=First.ViewModel"
        
        mc:Ignorable="d"
        Title="SeeOneTask" Height="450" Width="800" >

    <Window.DataContext>
        <local:SeeListViewModel></local:SeeListViewModel>
    </Window.DataContext>


    <Window.Resources>
        <local:Converter1 x:Key="Converter1"/>
        <local:Converter2 x:Key="Converter2"/>
    </Window.Resources>


    <Grid  Margin="0,5,0,0">
            <Button x:Name="button" Content="Button" HorizontalAlignment="Left" Margin="136,277,0,0" VerticalAlignment="Top" Width="75" />


        <ListBox Name="TaskList" Margin="3,52,125,166"  Visibility="{Binding ElementName=radioButton, Path=IsChecked, Converter={StaticResource Converter1}}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border Margin="5" BorderThickness="1" BorderBrush="SteelBlue" CornerRadius="4" Width="500">
                        <Grid Margin="3">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <TextBlock FontWeight="Bold"
                               Text="{Binding Path=Name}"  FontSize="16"/>
                            <TextBlock Grid.Row="1" Text="{Binding Path=Description }"  FontSize="14" />
                            <TextBlock Grid.Row="2" Text="{Binding Path=Importance, Converter={StaticResource Converter2},ConverterParameter=1 }"  FontSize="12"/>
                            <TextBlock Grid.Row="3" Text="{Binding Path=Urgency , Converter={StaticResource Converter2},ConverterParameter=2 }" FontSize="12" />
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <RadioButton x:Name="radioButton" Content="RadioButton" HorizontalAlignment="Left" Margin="685,106,0,0" VerticalAlignment="Top" GroupName="1" />
        <RadioButton x:Name="radioButton1" Content="RadioButton" HorizontalAlignment="Left" Margin="684,69,0,0" VerticalAlignment="Top"  GroupName="1"/>
        <Slider x:Name="slider" HorizontalAlignment="Left" Margin="190,23,0,0" VerticalAlignment="Top" Width="59"/>





    </Grid>

   
</Window>
